{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://domstol.no/felles/1.0/kodeverkBruke.schema.json",
  "description": "Eksempel p√• bruk av kodeverk i schema",

  "type": "object",
  "properties": {
    "melding": {
      "type": "string"
    },
    "dokumenter": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/dokument"
      }
    }
  },
  "required": ["melding", "dokumenter"],
  "additionalProperties": false,

  "definitions": {
    "kodeverk": {
      "type": "object",
      "description": "Kodeverk objekt definisjon som skal brukes i skjema, nesten",
      "properties": {
        "kodeType": {
          "$ref": "#/definitions/kodeType"
        },
        "kode": {
          "$ref": "#/definitions/kode"
        }
      },
      "required": ["kode"],
      "additionalProperties": false
    },
    "kode": {
      "type": "string",
      "description": "unik id for denne typen koder. Maks og min lengde er definert i kodeverk.schema.json"
    },
    "kodeType": {
      "type": "string",
      "description": "unik id for denne typen koder. Maks og min lengde er definert i kodeverk.schema.json"
    },
    "dokument": {
      "type": "object",
      "description": "Dokument",
      "properties": {
        "kategori": {
          "$ref": "#/definitions/kodeverk",
          "description": "POLIT_DOK type"
        },
        "overskrift": {
          "type": "string"
        },
        "skrevetDato": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["kategori", "overskrift", "skrevetDato"],
      "additionalProperties": false
    }
  }
}
